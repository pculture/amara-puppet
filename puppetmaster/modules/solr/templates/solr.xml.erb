<solr persistent="true" sharedLib="lib">
  <cores adminPath="/admin/cores">
    <% if @envs != nil %>
    <% @envs.each do |val| -%>
    <core name="<%= val %>" instanceDir="/etc/solr/conf/<%= val %>" />
    <% end -%>
    <% else %>
    <core name="core0" instanceDir="." />
    <% end %>
  </cores>
</solr>
