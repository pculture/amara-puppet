# unisubs uWSGI

description "uWSGI: unisubs"
<% if env == 'local' %>
manual
<% else %>
start on runlevel [2345]
stop on runlevel [06]
<% end %>

exec uwsgi --master --processes 4 --die-on-term --uid www-data --enable-threads --gid www-data -s :8000 -H <%= scope.lookupvar('appserver::python_ve_dir') %>/unisubs -b 8192 --no-orphans --vacuum --pythonpath <%= scope.lookupvar('appserver::app_dir') %> --module 'wsgi:application' --max-requests 5000 --log-syslog "uwsgi.unisubs" --env DJANGO_SETTINGS_MODULE=unisubs.dev_settings
