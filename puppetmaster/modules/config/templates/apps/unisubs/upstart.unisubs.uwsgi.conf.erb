# unisubs uWSGI

description "uWSGI: unisubs (<%= @env %>)"
start on runlevel [2345]
stop on runlevel [06]

exec uwsgi --master --processes 4 --die-on-term --uid www-data --enable-threads --gid www-data --http 127.0.0.1:8000 -H <%= @ve_dir %> -b 32768 --no-orphans --vacuum --pythonpath <%= @project_root %> --wsgi-file <%= @project_dir %>/deploy/unisubs.wsgi --max-requests 5000 --log-syslog "uwsgi.unisubs-<%= @env %>" --env DJANGO_SETTINGS_MODULE=unisubs_settings
