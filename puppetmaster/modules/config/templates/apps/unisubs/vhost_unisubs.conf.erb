server {
    listen 80;
    server_name <%= @server_name %>;
    client_max_body_size 4G;
    open_file_cache off;
    sendfile off;

    keepalive_timeout 5;

    location ~* /en/user-data/video/(.*) {
        root /opt/extras/video;
        try_files /$1 @unisubs;
    }
    location ~* /en/user-data/pictures/(.*) {
        root /opt/extras/pictures;
        try_files /$1 @unisubs;
    }
    location ~* /en/site_media/static-cache/(.*) {
        root /opt/extras/static-cache;
        try_files /$1 @unisubs;
    }
    location ~* /user-data/video/(.*) {
        root /opt/extras/video;
        try_files /$1 @unisubs;
    }
    location ~* /user-data/pictures/(.*) {
        root /opt/extras/pictures;
        try_files /$1 @unisubs;
    }
    location ~* /site_media/static-cache/(.*) {
        root /opt/extras/static-cache;
        try_files /$1 @unisubs;
    }

    location ~* /en/user-data/(.*) {
        root <%= @project_dir %>/user-data;
        try_files /$1 @unisubs;
    }
    location ~* /en/site_media/(.*) {
        root <%= @project_dir %>/media;
        try_files /$1 @unisubs;
    }
    location ~* /user-data/(.*) {
        root <%= @project_dir %>/user-data;
        try_files /$1 @unisubs;
    }
    location ~* /site_media/(.*) {
        root <%= @project_dir %>/media;
        try_files /$1 @unisubs;
    }
    location ~* / {
        proxy_redirect   off;
        #<% if scope.lookupvar('::is_vagrant') == 'true' and @env == 'vagrant' %>
        #proxy_set_header Host unisubs.example.com:8000;
        #<% else %>
        #proxy_set_header Host <%= @server_name %>;
        #<% end %>
        #proxy_set_header X-Real-IP        $remote_addr;
        #proxy_set_header X-Forwarded-For  $proxy_add_x_forwarded_for;
        #proxy_set_header X-Magic-Header   "secret";
        #proxy_set_header X-Forwarded-Protocol http;
        #proxy_pass http://unisubs-backend-<%= @env %>;
        include uwsgi_params;
        uwsgi_pass unix:///tmp/uwsgi_unisubs.sock;
    }

    location @unisubs {
        proxy_redirect   off;
        #<% if scope.lookupvar('::is_vagrant') == 'true' and @env == 'vagrant' %>
        #proxy_set_header Host unisubs.example.com:8000;
        #<% else %>
        #proxy_set_header Host <%= @server_name %>;
        #<% end %>
        #proxy_set_header X-Real-IP        $remote_addr;
        #proxy_set_header X-Forwarded-For  $proxy_add_x_forwarded_for;
        #proxy_set_header X-Magic-Header   "secret";
        #proxy_set_header X-Forwarded-Protocol http;
        #proxy_pass http://unisubs-backend-<%= @env %>;
        include uwsgi_params;
        uwsgi_pass unix:///tmp/uwsgi_unisubs.sock;
    }
}
